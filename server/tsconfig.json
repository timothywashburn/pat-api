{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"strict": true,
		"strictPropertyInitialization": false,
		"sourceMap": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
	},
	"include": [
		"src/**/*",
		"test/**/*"
	],
	"exclude": [
		"node_modules"
	]
}